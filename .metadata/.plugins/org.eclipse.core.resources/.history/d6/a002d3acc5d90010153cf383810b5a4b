package dp;

import java.util.List;

public class SolutionLeetCode139 {

    public boolean wordBreak(String s, List<String> wordDict) {
    	return isMatch(s,wordDict);
    }
    //暴力方法:匹配s是否能由wordDict组成
    public boolean isMatch(String s,List<String> wordDict) {
    	if(s.length()==0) return true;
    	for(String word:wordDict) {
    		if(s.endsWith(word)) {
    			if(isMatch(s.substring(0,s.length()-word.length()),wordDict)) {
    				return true;
    			}
    		}
    	}
    	return false;
    }
    //从暴力方法->动态规划
    public boolean isMatchWithDp(String s,List<String> wordDict) {
    	int len=s.length();
    	//dp[i]表示s.substring(0,i+1)能否被wordDict组成
    	boolean[] dp=new boolean[len+1];
    	dp[0]=true;
    	for(int i=1;i<=len;i++) {
    		String cur=s.substring(0,i);
    		for(String word:wordDict) {
				if(i-word.length()>=0&&cur.endsWith(word)) {
					dp[i]=dp[i-word.length()];
				}
				if(dp[i])break;
			}
    		
    	}
    	return dp[len];
    	
    }
    

}
